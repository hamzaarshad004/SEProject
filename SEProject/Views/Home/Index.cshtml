@model IEnumerable<SEProject.Models.SchoolViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="container mt-md-5 mt-3">
    <div class=" row align-items-center">
        <div class=" col-6 mx-auto col-md-6 order-md-2">
            <img alt="School Logo" class="img-fluid mb-3 mb-md-0" src="~/Content/Images/Educational-Institution-1400x668.png" width="1400" height="668">
        </div>
        <div class="col-md-6 order-md-1 text-center text-md-left pr-md-5">
            <h1 class="mb-3">School Book</h1>
            <p class=" lead">
                We provide solutions to search for Schools at your ease.
            </p>
            <p class="lead mb-4">
                We allow you to filter schools based on your budget,
                area and you can also view schools based on their ratings.
            </p>
            <div class="d-flex flex-column flex-md-row lead mb-3">
                <a type="button" class="btn btn-outline-secondary mb-3 mb-md-0 mr-md-3" href=@Url.Action("Login","Account")>
                    Get Started.
                </a>
                <a type="button" class="btn btn-outline-secondary" href=@Url.Action("Register","Account")>
                    Advertise with us.
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container mt-3 mt-md-3">
    <div class="row mt-md-3 mt-3 ml-2">
        @foreach (var item in Model)
        {
            <div class="card-deck col-md-6 col-lg-4 col-sm-6 col-xs-12 mt-md-3 mt-3">
                <div class="card border-secondary">
                    <img class="card-img-top img-responsive img-thumbnail" src=@Url.Content(item.file) alt="Card image" style="width:100%; height:170px; object-fit:fill;">
                    <div class="card-body">
                        <h4 class="card-title">@item.SchoolName</h4>
                        <p>@item.City</p>
                        <p>@item.PhoneNo</p>
                        <p>Average Rating: @item.Rating Stars</p>
                    </div>
                    <div class="card-footer text-center">
                        <a href=@Url.Action("Details","Home", new {id = item.id }) class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
