@model SEProject.Models.SchoolViewModel

<script src="~/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery-3.0.0.min.js" type="text/javascript"></script>

@using (Html.BeginForm("Add", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container mt-3 mt-md-5">
        <div class="row align-items-center">
            <div class="mt-md-5 col-md-4 mx-md-auto col-12">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="Name">School Name:</label>
                        @Html.EditorFor(model => model.SchoolName, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Enter School name" } })
                        @Html.ValidationMessageFor(m => m.SchoolName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="City">City:</label>
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Enter City name" } })
                        @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="Address">Address:</label>
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Enter Address" } })
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="phno">Phone No:</label>
                        @Html.EditorFor(model => model.PhoneNo, new { htmlAttributes = new { @class = "form-control", @type = "tel", @placeholder = "Enter Phone No" } })
                        @Html.ValidationMessageFor(m => m.PhoneNo, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="pwd">Admission Fee:</label>
                        @Html.EditorFor(model => model.AdmissionFee, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "Enter Admission Fee" } })
                        @Html.ValidationMessageFor(m => m.AdmissionFee, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="pwd">Fee(PG-Middle):</label>
                        @Html.EditorFor(model => model.FeePG_Middle, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Enter PG to Middle Fee" } })
                        @Html.ValidationMessageFor(m => m.FeePG_Middle, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label for="pwd">Fee(Matric/O-Levels):</label>
                        @Html.EditorFor(model => model.FeeMatric_Olevels, new { htmlAttributes = new { @class = "form-control", @type = "text", @placeholder = "Enter Matric/O-Level Fee" } })
                        @Html.ValidationMessageFor(m => m.FeeMatric_Olevels, "", new { @class = "text-danger" })
                    </div>
                    <label for="Img">
                        Image:
                    </label>
                    <div class="mb-3">
                        @Html.EditorFor(model => model.file, new { htmlAttributes = new { @class = "form-control", @type = "file" } })
                        @Html.ValidationMessageFor(model => model.file, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <div class="text-success">
                            @ViewBag.FileStatus
                        </div>
                    </div>

                    <div class="d-flex flex-column col-8 flex-md-row lead mb-3 justify-content-md-center ml-5">
                        <input type="submit" value="Add School" class="btn btn-outline-secondary mb-md-0 mr-md-3" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}